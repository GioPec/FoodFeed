<!DOCTYPE html>
<html>
  <head>
    <title>Foodproject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      Logged in as <%= current_user.email%> [<%= link_to "Profile", user_path(current_user.id) %> - <%= link_to 'Logout', destroy_user_session_path, :method => :delete%>] - <%= link_to 'Daily recipe', dailyrecipe_path %> - <%= link_to 'Discover', discover_path %>
    <% end %>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>

    <%= yield %>
  </body>
</html>
