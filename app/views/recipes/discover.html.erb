<script>
        function showFilter() {
        var x = document.getElementById("filter");
        if (x.style.display === "none") {
            x.style.display = "block";
        } else {
            x.style.display = "none";
        }
    }
</script>
<center>
    
    <div id="filter" style="display: none" class= "bootstrap-select-wrapper"><br>
        <%= form_tag discover_path, :method => :post, :multipart => true do %>
                <label>Course</label>
                <%= select(:recipe, :course,    [['', ''],
                                                ['Breakfast', 'Breakfast'],
                                                ['Appetizer', 'Appetizer'], 
                                                ['Finger Food', 'Finger Food'],
                                                ['First course', 'First course'],
                                                ['Soup', 'Soup'],
                                                ['Pizza', 'Pizza'],
                                                ['Second course', 'Second course'],
                                                ['Bread', 'Bread'],
                                                ['Side course', 'Side course'],
                                                ['Salad', 'Salad'],
                                                ['Sauce', 'Sauce'],
                                                ['Snack', 'Snack'],
                                                ['Drink', 'Drink'],
                                                ['Dessert', 'Dessert'],
                                                ['Fruit', 'Fruit']])  %>
                <br><label>Diet</label>
                <%= select(:recipe, :category, [['', ''],
                                                ['Gluten Free', 'Gluten Free'],
                                                ['Ketogenic', 'Ketogenic'], 
                                                ['Vegetarian', 'Vegetarian'],
                                                ['Lacto-Vegetarian', 'Lacto-Vegetarian'],
                                                ['Ovo-Vegetarian', 'Ovo-Vegetarian'],
                                                ['Vegan', 'Vegan'],
