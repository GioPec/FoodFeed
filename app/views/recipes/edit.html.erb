<h2>Edit recipe</h2>

<%= form_tag user_recipe_path(current_user.id, @recipe.id), :method => :put, :multipart => true do %>
        <label>Title</label>
        <%= text_field(:recipe, :title) %>
        <label>Preparazione</label>
        <%= text_field(:recipe, :preparazione) %>
        <button type="submit">Save changes</button>
<% end %>