<center>
  <br><img src="/images/logo.jpg" height="100px"><br><br>
  <h2 class="bree">Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "input-group-text" %>
    </div>

    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username, autocomplete: "username", required: true, :class => "input-group-text" %>
    </div>

    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autocomplete: "first_name", required: true, :class => "input-group-text" %>
    </div>

    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, autocomplete: "last_name", required: true, :class => "input-group-text" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", :class => "input-group-text" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "input-group-text" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Sign up", :class => "btn btn-orange" %>
    </div>
  <% end %>
  <br>
  <%= render "users/shared/links" %>
</center>
