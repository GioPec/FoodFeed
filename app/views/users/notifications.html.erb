<center>
    <br><h1 class="bree">Notifications</h1><hr>

        <% if @all_n.to_a.length==0 %>
            <p>Nobody likes you :(</p>
        <% end %>

        <% @all_n.each do |n| %>
            
            <% if n.read==false %>
                      <% sender=User.find(n.sender_id)%>
                      <% if n.notification_type=="like" %>
                        <%= link_to sender.username+" liked your recipe", remove_notification_path(n.id), :class => "not_read_notification" %><br>
                      <% elsif n.notification_type=="comment" %>
                        <%= link_to sender.username+" commented your recipe",  remove_notification_path(n.id), :class => "not_read_notification" %><br>
                      <% else %> 
                        <%= link_to sender.username+" followed you", remove_notification_path(n.id), :class => "not_read_notification" %><br>
                      <% end %>
                    <% else %>
                      <% sender=User.find(n.sender_id)%>
                      <% if n.notification_type=="like" %>
                        <a class="read_notification" href="/users/<%= n.user_id %>/recipes/<%= n.recipe_id %>"><%= sender.username %> liked your recipe</a><br>
                      <% elsif n.notification_type=="comment" %> 
                        <a class="read_notification" href="/users/<%= n.user_id %>/recipes/<%= n.recipe_id %>"><%= sender.username %> commented your recipe</a><br>
                      <% else %> 
                        <a class="read_notification" href="/users/<%= n.sender_id %>"><%= sender.username %> started following you</a><br>
                      <% end %>
                    <% end %>
            <!-- datetime -->
            <% difference = (DateTime.now.utc - n.created_at).to_i %>
                <% if difference < 60 %>
                <p class="text-right"><%= difference.to_s + "s"%></p>
                <% elsif difference < 60*60 %>
                <p class="text-right"><%= (difference/60).to_s + "m"%></p>
                <% elsif difference < 60*60*24 %>
                <p class="text-right"><%= (difference/(60*60)).to_s + "h" %></p>
                <% elsif difference < 60*60*24*7 %>
                <p class="text-right"><%= (difference/(60*60*24)).to_s + "g" %></p>
                <% elsif difference < 60*60*24*7*52 %>
                <p class="text-right"><%= (difference/(60*60*24*7)).to_s + "w" %></p>
                <% else %>
                <p class="text-right"><%= (difference/(60*60*24*7*52)).to_s + "y" %></p>
            <% end %><br>
            <hr>
        <% end %>
</center>